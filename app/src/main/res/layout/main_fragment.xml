<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment"
    android:background="@color/black">

    <ImageView
        android:id="@+id/home_img_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/finance04"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/home_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Investment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/orange"
        android:fontFamily="monospace"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_01"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/home_img_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/home_tv_currencie1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currencie 1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/home_tv_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,53%"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="40dp"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/home_trending_up_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trending_up"
            app:layout_constraintBottom_toBottomOf="@id/home_tv_value1"
            app:layout_constraintEnd_toStartOf="@id/home_tv_value1"
            android:layout_marginEnd="3dp"/>

        <ImageView
            android:id="@+id/home_trending_down_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trending_down"
            app:layout_constraintBottom_toBottomOf="@id/home_tv_value1"
            app:layout_constraintEnd_toStartOf="@id/home_tv_value1"
            android:layout_marginEnd="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_02"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/layout_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background"
        android:layout_marginTop="30dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp">

        <TextView
            android:id="@+id/home_tv_currencie2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currencie 2"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_tv_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,0%"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="40dp"
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/home_trending_up_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trending_up"
            app:layout_constraintBottom_toBottomOf="@id/home_tv_value2"
            app:layout_constraintEnd_toStartOf="@id/home_tv_value2"
            android:layout_marginEnd="3dp"/>

        <ImageView
            android:id="@+id/home_trending_down_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trending_down"
            app:layout_constraintBottom_toBottomOf="@id/home_tv_value2"
            app:layout_constraintEnd_toStartOf="@id/home_tv_value2"
            android:layout_marginEnd="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_03"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/layout_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background"
        android:layout_marginTop="30dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp">

        <TextView
            android:id="@+id/home_tv_currencie3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currencie 3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/home_tv_value3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1,12%"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="40dp"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/home_trending_up_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trending_up"
            app:layout_constraintBottom_toBottomOf="@id/home_tv_value3"
            app:layout_constraintEnd_toStartOf="@id/home_tv_value3"
            android:layout_marginEnd="3dp"/>

        <ImageView
            android:id="@+id/home_trending_down_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trending_down"
            app:layout_constraintBottom_toBottomOf="@id/home_tv_value3"
            app:layout_constraintEnd_toStartOf="@id/home_tv_value3"
            android:layout_marginEnd="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>